# ===============================================
# OTROS SERVICIOS
# ===============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ===============================================
# NOTAS IMPORTANTES
# ===============================================
# 1. NUNCA compartas este archivo en Git
# 2. Cambia APP_DEBUG=false en producción
# 3. Genera nueva APP_KEY: php artisan key:generate
# 4. Configura cron para queue:work si usas QUEUE_CONNECTION=database
# 5. Ejecuta: php artisan config:cache después de cambios
# 6. Ejecuta: php artisan storage:link para archivos públicos
